{
  "name": "money-maker",
  "private": true,
  "version": "1.1.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "publish": "npm run build && electron-builder --publish always",
    "build:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.victorgrabowski.moneymaker",
    "productName": "MoneyMaker",
    "directories": {
      "output": "dist-release"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "VictorGrabowski",
      "repo": "MoneyMaker",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@types/howler": "^2.2.12",
    "@types/matter-js": "^0.20.2",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "electron-store": "^11.0.2",
    "framer-motion": "^12.26.2",
    "gh": "^2.8.9",
    "howler": "^2.2.4",
    "lucide-react": "^0.562.0",
    "matter-js": "^0.20.0",
    "rc-slider": "^11.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-player": "^3.4.0",
    "react-youtube": "^10.1.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}